<%= stylesheet_link_tag "devise/new", :media => "all" %>

<div class = "top-logo">
  <%= link_to image_tag("yen.png",class: "logo-image"), "/" %>
</div>
<%= form_with model: @user,url: user_registration_path, class: 'registration-main', local: true do |f| %>
<%= render 'shared/error_messages', model: f.object, class: "error_messages"%>
<div class = "form-contents">  
  <div class = "form">
    <label class="form-text">ニックネーム</label>
    <span class="indispensable">必須</span> 
    <%= f.text_field :nickname, class:"input-default", placeholder:"例）ぺこピグ", autofocus: true, maxlength:"30" %>
  </div>
  <div class = "form">
    <label class="form-text">メールアドレス</label>
    <span class="indispensable">必須</span>
    <%= f.text_field :email, class:"input-default",placeholder:"PC・携帯どちらでも可" %>
  </div>
  <div class="form">
    <label class="form-text">パスワード</label>
    <span class="indispensable">必須</span>
    <%= f.password_field :password, class:"input-default",placeholder:"6文字以上の半角英数字", minlength:"6" %>
  </div>
  <div class= "form">
    <label class="form-text">確認用パスワード</label>
    <span class="indispensable">必須</span>
    <%= f.password_field :password_confirmation, class:"input-default",placeholder:"同じパスワードを入力して下さい", minlength:"6" %>
  </div>
  <div class="form">
    <label class="form-text">月次目標食費額</label>
    <span class="indispensable">必須</span>
    <%= f.number_field :target_amount, class:"input-default", placeholder:"例）30000" ,step:"100"%>
    <p class ="comment">※あとからマイページで編集できます</p>
    </div>
  <div class="form">
    <div class="submit">
      <%= f.submit "登録" ,class: "submit-btn" %>
    </div>
  </div>
</div>
 <% end %>