<%= stylesheet_link_tag "devise/new", :media => "all" %>

<div class = "top-logo">
  <%= link_to image_tag("mypage.png",class: "logo-image"), "/expenses/#{current_user.id}" %>
</div>
<%= form_with model: @user,url: user_registration_path, class: 'registration-main', local: true do |f| %>
<%= render 'shared/error_messages', model: f.object %>
<div class = "form-contents">  
  <div class = "form">
    <label class="form-text">ニックネーム</label>
    <span class="indispensable">必須</span> 
    <%= f.text_field :nickname, class:"input-default", placeholder:"例）ぺこピグ", autofocus: true, maxlength:"30" %>
  </div>
  <div class="form">
    <label class="form-text">月次目標食費額</label>
    <span class="indispensable">必須</span>
    <%= f.number_field :target_amount, class:"input-default", placeholder:"例）30000" ,step:"100"%>
  </div>
  <div class="form">
    <label class="form-text">パスワード</label>
    <span class="indispensable">必須</span>
    <%= f.password_field :password, class:"input-default",placeholder:"登録しているパスワード", minlength:"6" %>
  </div>
  <div class="form">
    <div class="submit">
      <%= f.submit "変更" ,class: "submit-btn" %>
    </div>
  </div>
</div>
 <% end %>