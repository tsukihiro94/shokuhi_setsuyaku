<%= stylesheet_link_tag "devise/edit", :media => "all" %>

<div class = "top-logo">
  <%= link_to image_tag("yen.png",class: "logo-image"), "/" %>
</div>
<%= form_with model: @user,url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class = "form-contents">  
  <div class = "form">
    <label class="form-text">メールアドレス</label>
    <span class="indispensable">必須</span>
    <%= f.text_field :email, class:"input-default",placeholder:"PC・携帯どちらでも可" %>
  </div>
  <div class="form">
    <label class="form-text">パスワード</label>
    <span class="indispensable">必須</span>
    <%= f.password_field :password, class:"input-default",placeholder:"登録したパスワード", minlength:"6" %>
  </div>
  <div class="form">
    <div class="submit">
      <%= f.submit "ログイン" ,class: "submit-btn" %>
    </div>
  </div>
</div>
 <% end %>