<%= stylesheet_link_tag "expense/index", :media => "all" %>

<%= link_to image_tag("yen.png",class: "logo-image"), "/" %>

<div class = "contents">
  <div class = "left-content">
    <h2>カンタン家計簿</h2>
    <%= form_with(model: @expense, local: true) do |f|%>
      <label for="bday">日にちを選んで下さい！</label>
        <%= f.date_field :day, class: 'recod-date' %>
        <div id = "form-group">
          <%= f.collection_select(:category_id_1, Category.all, :id, :name, {}, {class:"select-box"}) %>
          <%= f.text_field :name_1, class:"name-default", id:"name_1", placeholder:"詳細1" %>
          <%= f.text_field :price_1, class:"price-default",  id:"price_1", placeholder:"値段1" %>
        </div>
        <input type="button" value="追加" id="add" >
        <input type="button" value="削除" id="delete" >
        <%= f.submit "登録" ,class: "submit-btn" %>
    <% end %>
  </div>
  <div class = "right-content">
    <div class = "content1">1
    </div>
    <div class = "content2">2
    </div>
  </div>
</div>