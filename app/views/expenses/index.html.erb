<%= stylesheet_link_tag "expense/index", :media => "all" %>

<%= link_to image_tag("yen.png",class: "logo-image"), "/" %>

<div class = "contents">
  <div class = "left-content">
    <h2>カンタン家計簿</h2>
    <%= form_with(model: @expense,id: "form" ,local: true) do |f|%>
      <label for="bday">日にちを選んで下さい！</label>
        <%= f.date_field :day, class: 'recod-date' %>
        <div id = "form-group">
         <div id = "group">
          <%= f.collection_select(:category_id_1, Category.all, :id, :name, {}, {class:"select-box"}) %>
          <%= f.text_field :name_1, class:"name-default", id:"name_1", placeholder:"詳細1" %>
          <%= f.text_field :price_1, class:"price-default",  id:"price_1", placeholder:"値段1" %>
         </div>
        </div>
        <input type="button" value="追加" id="add" >
        <input type="button" value="削除" id="delete" >
        <%= f.submit "登録" , id: "submit-btn",data: {confirm: "登録しますか？"} %>
    <% end %>
  </div>
  <div id="list">
  </div>

  <div class = "right-content">
    <div class = "content1">
    <% @expenses.each do |expense| %>
    <div class = "expense">
        <% i =+ 1 %>
      <div class = "name_price" , id ="nameGroup">
      <table>
      <%= expense.day %>
      <tr>
      <td class = "td"><%= eval("expense.name_#{i}")%>
      <%= eval("expense.price_#{i}")%>  
      <%= eval("expense.name_#{i + 1}") %>
      <%= eval("expense.price_#{i + 1}") %>
      <%= eval("expense.name_#{i + 2}") %>
      <%= eval("expense.price_#{i + 2}") %>
      <%= eval("expense.name_#{i + 3}") %>
      <%= eval("expense.price_#{i + 3}") %>
      <%= eval("expense.name_#{i + 4}") %>
      <%= eval("expense.price_#{i + 4}") %>
      <%= eval("expense.name_#{i + 5}") %>
      <%= eval("expense.price_#{i + 5}") %>
      <%= eval("expense.name_#{i + 6}") %>
      <%= eval("expense.price_#{i + 6}") %>
      <%= eval("expense.name_#{i + 7}") %>
      <%= eval("expense.price_#{i + 7}") %>
      <%= eval("expense.name_#{i + 8}") %>
      <%= eval("expense.price_#{i + 8}") %>
      <%= eval("expense.name_#{i + 9}")%>
      <%= eval("expense.price_#{i + 9}")%>
      <%= link_to '削除', "/expenses/#{expense.id}" , method: :delete, data: {confirm: "削除しますか？"}, class: "delBtn" %></td>
      </tr>
      </table>
      </div>
    </div>
    <% end %>
    </div>
    <div class = "content2">2
    </div>
  </div>
</div>