      <%= eval("expense.price_#{i + 4}") %>
      <%= eval("expense.name_#{i + 5}") %>
      <%= eval("expense.price_#{i + 5}") %>
      <%= eval("expense.name_#{i + 6}") %>
      <%= eval("expense.price_#{i + 6}") %>
      <%= eval("expense.name_#{i + 7}") %>
      <%= eval("expense.price_#{i + 7}") %>
      <%= eval("expense.name_#{i + 8}") %>
      <%= eval("expense.price_#{i + 8}") %>
      <%= eval("expense.name_#{i + 9}")%>
      <%= eval("expense.price_#{i + 9}")%></td>
