<%= stylesheet_link_tag "post/new", :media => "all" %>

<div class = "top-logo">
  <%= link_to image_tag("yen.png",class: "logo-image"), "/" %>
</div>
<%= form_with model: @post,class: 'post-main', local: true do |f| %>

<div class = "form-contents">  
  <div class = "form">
    <label class="form-text">私の節約術</label>
    <span class="indispensable">🐖</span> 
    <%= f.text_field :text, class:"input-default", placeholder:"140文字以内であなたの節約術をシェアしよう！", autofocus: true, maxlength:"140" %>
  </div>
  <div class="form">
    <div class="submit">
      <%= f.submit "投稿" ,class: "submit-btn" %>
    </div>
  </div>
</div>
 <% end %>